<div class="hero">
  <br />
  <div class="frosty col-xs-10 col-xs-offset-1 text-center">
    <br/>
    <h1>Learn How to Game like a Pro!</h1>
    <br/>
    <h2>You will never be a noob!</h2>
    <br/>
    <%= link_to 'Learn More', courses_path, class: 'btn btn-success' %>
    <br/><br/>
  </div>
</div>

<br/>

<div class="col-xs-10 col-xs-offset-1 features text-center">
  <% @courses.each do |course| %>  
  <% if @courses.find_index(course) < 3 %>
  <div class="col-sm-4 booyah-box">
    <%= image_tag course.image, class: 'img-responsive root-page-image' %>
    <br/>
    <h3><%= course.title %></h3>
    <p><%= course.description %></p>
  </div>
  <% end %>
  <% end %>
</div>